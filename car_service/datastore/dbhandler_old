'''
def get_db():
    db = getattr(g, '_database', None)
    if db is None:
        # print ("creating db")
        db = g._database = shelve.open("devices.db")

    return db

def close_db_connection(exception):
    # print ("shutting down")
    db = getattr(g, '_database', None)
    if db is not None:
        db.close()


def get_all_cars():

    shelf = get_db()
    # print (shelf)
    keys = list(shelf.keys())

    return [ shelf[key] for key in keys ]



